{% extends 'base.html.twig' %}

{% block body %}
    <nav class="navbar offset-1 col-10">
        <div class="row col-12">
            <div class="col-4 title">
                <h1 class="center">A propos de We Movies</h1>
            </div>
            <div class="row search col-8">
                <div class="input-group input-group-lg">
                    <input type="text" class="form-control" aria-label="Large" aria-describedby="inputGroup-sizing-sm" id="search" name="search" placeholder="Search a movie here ...">
                </div>
            </div>

        </div>
    </nav>

    <div class="row offset-1 col-10 banner">
        {% set firstMovie = movies|first %}
        <img src="{{ config.images.secure_base_url ~ 'w500' ~ firstMovie.poster_path}}" class="img-fluid rounded" alt="{{ firstMovie.title }}" />
    </div>

    <div class="content offset-1 col-10 row">
        <div class="col-3" id="filters">
            <ul>
                {% for genre in genres %}
                    <li>
                        <div class="custom-control form-control-lg custom-checkbox">
                            <input class="form-check-input" type="checkbox" value="{{ genre.id }}" name="genre[]" id="genre-{{ genre.id }}">
                            <label class="form-check-label" for="genre-{{ genre.id }}">{{ genre.name }}</label>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="col-9" id="movie_list">
            <ul>
                {% for movie in movies[1:] %}
                    <li>
                        <div class="row detail">
                            <div class="col-3">
                                <img src="{{ config.images.secure_base_url ~ 'w185' ~ movie.poster_path}}" class="img-fluid rounded" alt="{{ movie.title }}" />
                            </div>
                            <div class="col-9">
                                <p class="title">
                                    <h3 class="title d-inline">{{ movie.title }}</h3>
                                    <div class="rating d-inline">
                                        {% set score = (movie.vote_average / 2)|round %}
                                        {% for i in 1..5 %}
                                            <span class="fa fa-star {{ loop.index < score ? 'checked' : '' }}"></span>
                                        {% endfor %}
                                        <span class="rate">({{ movie.vote_count}} votes)</span>
                                    </div>
                                </p>
                                <p><span>{{ movie.release_date | slice(0,4)}}</span></p>
                                <p class="description">{{ movie.overview }}</p>
                                <a href="#" class="btn btn-primary btn-lg float-md-right" role="button" data-toggle="modal" data-target="#detailModal" data-id="{{ movie.id }}" aria-pressed="true">Lire le details</a>
                            </div>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <div class="modal fade" id="detailModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body"></div>
                <div class="modal-footer"></div>
            </div>
        </div>
    </div>
{% endblock %}